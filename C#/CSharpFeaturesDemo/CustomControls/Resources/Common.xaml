<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Region Generic Styles -->
    <Style x:Key="GenericControlStyle" TargetType="{x:Type Control}">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="GenericTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Beige"/>
    </Style>

    <Style x:Key="GenericTextBoxStyle" BasedOn="{StaticResource GenericControlStyle}" TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="Azure"/>
    </Style>
    <!-- Endregion -->

</ResourceDictionary>
